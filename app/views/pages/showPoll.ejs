<a href="/">Home</a>
    
<% if (locals.votes) { %>
    <% var hasVotes = [] %>

    <ul>
         <% (locals.votes).forEach(function(vote) { %>
            <li><%= options[vote.idx] %>: <%= vote.count %></li>
            <% hasVotes.push(vote.idx) %>
        <% }); %>
        
        <% options.forEach(function (option, i) { %>
            <% if (hasVotes.indexOf(i) === -1) { %>
                <li><%= options[i] %>: 0</li>
            <% } %>
        <% }) %>
    </ul>
   
    
<% } %>


